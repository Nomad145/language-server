<?xml version="1.0"?>
<ruleset>
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>
    <arg value="nps"/>

    <file>bin</file>
    <file>src</file>
    <file>tests</file>

    <exclude-pattern>tests/fixtures/*</exclude-pattern>

    <rule ref="Doctrine"/>
</ruleset>
